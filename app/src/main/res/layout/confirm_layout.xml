<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lang_confirm"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="#000000"
        android:alpha="0.7"/>

    <RelativeLayout
        android:id="@+id/confirm_bg"
        android:layout_width="@dimen/confirm_width"
        android:layout_height="@dimen/confirm_height"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/chg_lang_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/confirm_title_margin"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="@dimen/confirm_title_size"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/confirm_btns_margin">

            <Button
                android:id="@+id/yes"
                android:layout_width="@dimen/confirm_btn_width"
                android:layout_height="@dimen/confirm_btn_height"
                android:textSize="@dimen/confirm_btn_text_size"
                android:drawableLeft="@drawable/check"
                android:layout_gravity="bottom"
                android:soundEffectsEnabled="false"/>

            <View
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"/>

            <Button
                android:id="@+id/no"
                android:layout_width="@dimen/confirm_btn_width"
                android:layout_height="@dimen/confirm_btn_height"
                android:textSize="@dimen/confirm_btn_text_size"
                android:drawableLeft="@drawable/cross"
                android:layout_gravity="bottom"
                android:soundEffectsEnabled="false"/>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>