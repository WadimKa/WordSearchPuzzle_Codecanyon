<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/dialog_inner"
        android:layout_width="@dimen/rate_dialog_width"
        android:layout_height="@dimen/rate_dialog_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/rate_dialog_padding">


        <TextView
            android:id="@+id/lang_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="0dp"
            android:includeFontPadding="false"
            android:minHeight="0dp"
            android:textSize="@dimen/rate_text_size"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lang_title"
            android:layout_marginTop="@dimen/rate_text_margin"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/rate_text_size"/>


        <Button
            android:id="@+id/no_thanks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/rate_btn_text_size"
            android:gravity="left|bottom"
            android:textColor="@color/btn_rate_selector"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:includeFontPadding="false"
            android:minWidth="0dp"
            android:textStyle="bold"
            android:visibility="gone"/>

        <Button
            android:id="@+id/no_thanks_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/rate_btn_text_size"
            android:gravity="left|bottom"
            android:textColor="@color/btn_rate_selector_n"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:includeFontPadding="false"
            android:minWidth="0dp"
            android:textStyle="bold"
            android:visibility="gone"/>


        <!--                                              -->


        <Button
            android:id="@+id/later"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/no_thanks"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/rate_btn_text_size"
            android:gravity="bottom"
            android:textColor="@color/btn_rate_selector"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:includeFontPadding="false"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/rate_dialog_btn_margin"/>

        <Button
            android:id="@+id/later_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/no_thanks_n"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/rate_btn_text_size"
            android:gravity="bottom"
            android:textColor="@color/btn_rate_selector_n"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:includeFontPadding="false"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/rate_dialog_btn_margin"/>


        <!--                                              -->


        <Button
            android:id="@+id/rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="right|bottom"
            android:textSize="@dimen/rate_btn_text_size"
            android:textColor="@color/btn_rate_selector"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:includeFontPadding="false"
            android:textStyle="bold"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/rate_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="right|bottom"
            android:textSize="@dimen/rate_btn_text_size"
            android:textColor="@color/btn_rate_selector_n"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:includeFontPadding="false"
            android:textStyle="bold"
            android:visibility="gone"
            />


    </RelativeLayout>
</RelativeLayout>