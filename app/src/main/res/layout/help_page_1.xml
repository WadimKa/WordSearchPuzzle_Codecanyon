<?xml version="1.0" encoding="utf-8"?>
<net.codecanyon.trimax.wordsearch.help.HelpPage1
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/help_title_height"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="@dimen/help_title_size"
        android:paddingLeft="@dimen/dialog_side_paddings"
        android:paddingRight="@dimen/dialog_side_paddings"
        android:layout_alignParentTop="true"/>

    <View
        android:id="@+id/line0"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/title"/>


    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line0"
        android:layout_above="@id/line"
        android:padding="3dp">

        <ImageView
            android:id="@+id/anim_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/text"/>


    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/help_bottom_height"
        android:gravity="center_horizontal"
        android:textSize="@dimen/help_desc_size"
        android:paddingTop="@dimen/help_text_padding_top"
        android:paddingLeft="@dimen/dialog_side_paddings"
        android:paddingRight="@dimen/dialog_side_paddings"
        android:layout_alignParentBottom="true"/>


</net.codecanyon.trimax.wordsearch.help.HelpPage1>